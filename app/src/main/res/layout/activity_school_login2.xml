<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".school_login">

   <ImageView
       android:id="@+id/ic_school"
       android:layout_width="150dp"
       android:layout_height="150dp"
       android:layout_marginTop="25dp"
       android:src="@drawable/ic_baseline_school_24"
       android:layout_centerHorizontal="true"
       />
    <TextView
        android:id="@+id/name_sc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_school"
        android:text="New horizon model school"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/name_sc"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_xml"
        android:ems="12"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:hint="enter username"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/username"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_xml"
        android:ems="12"
        android:drawableLeft="@drawable/password_baseline_lock_24"
        android:hint="Password"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"/>

    <Button
        android:id="@+id/login"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/login_btn"
        android:text="login"
        android:textColor="#ffffff"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Create a new account"
    android:layout_alignParentBottom="true"
    android:layout_below="@id/login"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="220dp"
    android:textColor="@color/orange"
    android:textSize="15sp"/>

"

</RelativeLayout>